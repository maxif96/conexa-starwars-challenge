{
  "name": "Star Wars API",
  "description": "API de Star Wars con autenticación JWT - Challenge Técnico Conexa",
  "repository": "https://github.com/maxif96/conexa-starwars-challenge",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["java", "spring-boot", "star-wars", "api", "jwt"],
  "env": {
    "JWT_SECRET": {
      "description": "Secret key for JWT token generation",
      "value": "starwars-api-secret-key-2024-very-secure-and-long-secret-key-for-jwt-signing"
    },
    "JWT_EXPIRATION": {
      "description": "JWT token expiration time in milliseconds",
      "value": "86400000"
    },
    "SPRING_PROFILES_ACTIVE": {
      "description": "Spring profile to use",
      "value": "prod"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/java"
    }
  ]
}
